<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--라운딩 등록 레이아웃-->

    <!--타이틀-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="라운딩 등록"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--라운딩 사진 등록-->
    <ImageView
        android:id="@+id/userImg"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="84dp"
        android:src="@drawable/lion2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--방제목 설정-->
    <EditText
        android:id="@+id/createRoomName"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:hint="방 제목을 입력해 주세요"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userImg" />

    <!--최대인원~장소까지 묶인 스크롤뷰-->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createRoomName">

        <TableLayout
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:stretchColumns="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_gravity="center_vertical"
                    android:text="날짜"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_field_MaxCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_gravity="center_vertical"
                    android:text="최대인원"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_field_HitCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_gravity="center_vertical"
                    android:text="타수"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_field_Sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_gravity="center_vertical"
                    android:text="성별"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_field_Age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_gravity="center_vertical"
                    android:text="나이"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_field_Place"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black" />
            </TableRow>

        </TableLayout>

    </ScrollView>

    <!--라운딩 개설 버튼-->
    <Button
        android:id="@+id/createRoom"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:backgroundTint="@color/teal_200"
        android:text="라운딩 개설"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
